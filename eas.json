{
  "cli": {
    "version": ">= 14.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": { "buildType": "apk", "image": "latest" },
      "ios": { "simulator": true, "image": "latest" }
    },
    "preview": {
      "distribution": "internal",
      "android": { "buildType": "apk", "image": "latest" },
      "ios": { "image": "latest" }
    },
    "production": {
      "autoIncrement": true,
      "android": { "buildType": "app-bundle", "image": "latest" },
      "ios": { "image": "latest", "autoIncrement": "buildNumber" }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./google-service-account.json",
        "track": "internal",
        "releaseStatus": "draft"
      },
      "ios": {
        "appleId": "info@butterlemonade.com",
        "ascAppId": "REPLACE_WITH_ASC_APP_ID",
        "appleTeamId": "REPLACE_WITH_TEAM_ID"
      }
    }
  }
}
